            if (confirm('Você tem certeza que deseja excluir este cliente?')) {
                alert('Cliente com ID ' + id + ' excluído.');
                // Aqui você poderia remover a linha da tabela ou enviar uma requisição de exclusão para o servidor.
            }
        }

        function aplicarPromocao(id) {
            // Lógica para aplicar a promoção ao cliente
            alert('Promoção aplicada ao cliente com ID ' + id + '.');
            // Aqui você poderia realizar ações como enviar requisição de promoção para o servidor ou aplicar a promoção diretamente.
        }
    </script>

</body>
</html>
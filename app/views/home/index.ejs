    <%- include('../../public/menu.html') %>
    <h1>Metaltech Games - System Controller</h1>
    <div class="container">
        <div class="button-grid">
            <button onclick="location.href='/'">Cadastrar Venda</button>
            <button onclick="location.href='../cliente/cadastro_cliente'">Cadastrar Cliente</button>
            <button onclick="location.href='../usuario/cadastrar_produto'">Cadastrar Produto</button>
            <button onclick="location.href='/'">Cadastrar Promoção</button>
            <button onclick="location.href='../admin/listar_cliente'">Editar Cliente</button>
            <button onclick="location.href='../admin/editar_produto'">Editar Produto</button>
        </div>
    </div>
</body>
</html>
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Usuário</title>
    <script>
        // Função para mostrar ou esconder o campo de Inscrição Estadual
        function toggleInscricaoEstadual() {
            var natureza = document.getElementById('natureza').value;
            var inscricaoEstadualField = document.getElementById('inscricao-estadual');
            if (natureza === 'PJ') {
                inscricaoEstadualField.style.display = 'block';
            } else {
                inscricaoEstadualField.style.display = 'none';
            }
        }
    </script>
</head>
<body>
    <h2>Cadastro de Usuário</h2>
    <form action="/usuario/cadastrar" method="POST">
        <label for="nome">Nome:</label>
        <input type="text" value="<%= usuario.nome  %>" name="nome" id="nome" required><br><br>

        <label for="email">Email:</label>
        <input type="email" value="<%= usuario.email %>" name="email" id="email" required><br><br>

        <label for="senha">Senha:</label>
        <input type="password" value="<%= usuario.senha %>" name="senha" id="senha" required><br><br>

        <label for="natureza">Natureza:</label>
        <select id="natureza" name="natureza" value="<%= usuario.natureza %>" onchange="toggleInscricaoEstadual()" required>
            <option value="PF">Pessoa Física</option>
            <option value="PJ">Pessoa Jurídica</option>
        </select><br><br>

        <label for="cpf_cnpj">CPF/CNPJ:</label>
        <input type="text" value="<%= usuario.cpf_cnpj %>" id="cpf_cnpj" name="cpf_cnpj" required><br><br>

        <label for="rg">RG:</label>
        <input type="text" value="<%= usuario.rg %>" id="rg" name="rg" required><br><br>

        <label for="data_nascimento">Data de Nascimento:</label>
        <input type="date" value="<%= usuario.nasce %>" id="data_nascimento" name="data_nascimento" required><br><br>

        <label for="cep">CEP:</label>
        <input type="text" value="<%= usuario.cep %>" id="cep" name="cep" required><br><br>

        <h3>Endereço Completo</h3>
        <label for="cidade">Cidade:</label>
        <input type="text" value="<%= usuario.cidade %>" id="cidade" name="cidade" required><br><br>

        <label for="estado">Estado:</label>
        <input type="text" value="<%= usuario.estado %>" id="estado" name="estado" required><br><br>

        <label for="bairro">Bairro:</label>
        <input type="text" value="<%= usuario.bairro %>" id="bairro" name="bairro" required><br><br>

        <label for="rua">Rua:</label>
        <input type="text" value="<%= usuario.rua %>" id="rua" name="rua" required><br><br>

        <label for="numero">Número:</label>
        <input type="text" value="<%= usuario.numero %>" id="numero" name="numero" required><br><br>

        <!-- Campo de Inscrição Estadual, visível apenas para PJ -->
        <div id="inscricao-estadual" style="display:none;">
            <label for="inscricao_estadual">Inscrição Estadual:</label>
            <input type="text" value="<%= usuario.ie %>" id="inscricao_estadual" name="inscricao_estadual"><br><br>
        </div>

        <button type="submit">Cadastrar</button>
    </form>
</body>
</html>